<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].AssignedTechnicians)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].PostulatedTechnicians)
