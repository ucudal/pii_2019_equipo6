@page
@model RazorPagesMovie.Pages.Projects.FinishModel
@{
    ViewData["Title"] = "Index";
}
@for (int i = 0; i < Model.Technicians.Count(); i++)
{
    <form method="post">
    <table class="table">
        <thead>
            <h3>
                @Html.DisplayFor(modelItem => Model.Technicians.ElementAt(i).Name):
            </h3>
            <tr>
                <th>
                    Horas trabajadas
                </th>
                <th>
                    Calificación (Del 1 al 5)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="number" name="param1" asp-for="Technicians.ElementAt(i).hours" step="0.1" class="form-control"/>
                </td>
                <td>
                    <input type="number" name="param2"  step="0.0001" class="form-control"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Technicians.ElementAt(0).ID" />
                </td>
                <td>
                    <input type="submit" asp-page-handler="Save" asp-route-id="@Model.Project.ID" asp-route-technicianToUpdateID="technicianToUpdateID" id="@i" value="Guardar">
                </td>
            </tr>
        </tbody>
    </table>
    </form>
    <script>
        $('#@i').on('click', function(){
        alert('Button clicked. Disabling...');
        $('#@i').attr("disabled", true);
            });
    </script>


}