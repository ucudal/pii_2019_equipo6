@page
@model RazorPagesMovie.Pages.Projects.FinishModel
@{
    ViewData["Title"] = "Index";
}
@for (int i = 0; i < Model.Technicians.Count(); i++)
{
    <form method="post">
    <table class="table">
        <thead>
            <h3>
                @Html.DisplayFor(modelItem => Model.Technicians.ElementAt(i).Name):
            </h3>
            <tr>
                <th>
                    Horas trabajadas
                </th>
                <th>
                    Calificación (Del 1 al 5)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="number" name="param1" asp-for="Technicians.ElementAt(i).hours" step="0.1" class="form-control"/>
                </td>
                <td>
                    <input type="number" name="param2"  step="0.0001" class="form-control"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="hidden" asp-for="Technicians.ElementAt(i).ID" />
                </td>
                <td>
                    <input type="submit" asp-page-handler="Save" asp-route-id="@Model.Project.ID" asp-route-technicianToUpdateID="@Model.Technicians.ElementAt(i).ID" id="@i" value="Guardar">
                </td>
            </tr>
        </tbody>
    </table>
    </form>
}
    <form method="post"asp-page-handler="Finish" asp-route-id="@Model.Project.ID">
        <input type="hidden" asp-for="Project.ID" />
        <input type="submit" value="Finalizar Proyecto" class="btn btn-success"> ¡Esta acción es PERMANENTE!
    </form>